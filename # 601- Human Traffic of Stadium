SELECT DISTINCT s.*
FROM Stadium s
JOIN (
    SELECT s1.id AS id1, s2.id AS id2, s3.id AS id3
    FROM Stadium s1
    JOIN Stadium s2 ON s2.id = s1.id + 1
    JOIN Stadium s3 ON s3.id = s2.id + 1
    WHERE s1.people >= 100
      AND s2.people >= 100
      AND s3.people >= 100
) AS x
ON s.id IN (x.id1, x.id2, x.id3)
ORDER BY s.id;

